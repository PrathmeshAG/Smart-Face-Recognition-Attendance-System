<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:background="@drawable/mainpage"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="20dp"
        android:layout_gravity="center">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginTop="11dp"
            android:fontFamily="@font/damion"
            android:textColor="@color/black"
            android:text="Welcomes To"
            android:textSize="31dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"

            android:fontFamily="@font/damion"
            android:text="Face Recognition Attendance"
            android:textColor="@color/black"
            android:textSize="35sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"

        android:orientation="vertical">

        <androidx.cardview.widget.CardView
            android:id="@+id/line1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="39dp"
            android:layout_marginTop="150dp"
            app:cardCornerRadius="20dp"
            app:cardElevation="20dp"
            android:outlineAmbientShadowColor="@color/black"
            android:backgroundTint="@color/white">


        <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
            <ImageView
                android:layout_width="120dp"
                android:layout_height="110dp"
                android:layout_gravity="center_horizontal"

                android:background="@drawable/student" />

            <Button
                android:id="@+id/loginAsStudentButton"
                android:layout_width="200dp"
                android:layout_height="50dp"
                android:layout_gravity="bottom"
                android:layout_marginLeft="67dp"
                app:cornerRadius="22dp"
                android:layout_marginBottom="10dp"
                android:text="Login as Student"

                android:backgroundTint="@color/light_blue"/>
</LinearLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/line2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="39dp"
            app:cardCornerRadius="20dp"
            app:cardElevation="20dp"
            android:outlineAmbientShadowColor="@color/black"
            android:backgroundTint="@color/white">

            <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
                android:orientation="vertical">


                <ImageView
                    android:layout_width="120dp"
                    android:layout_height="110dp"
                    android:layout_gravity="center_horizontal"
                    android:background="@drawable/teacher" />

                <Button
                android:id="@+id/loginAsAdminButton"
                android:layout_width="200dp"
                android:layout_height="50dp"
                android:layout_gravity="bottom"
                android:layout_marginLeft="67dp"
                android:layout_marginBottom="10dp"
                android:text="Login as Admin"

                app:cornerRadius="22dp"
                android:backgroundTint="@color/light_blue"/>
            </LinearLayout>

        </androidx.cardview.widget.CardView>

    </LinearLayout>

</LinearLayout>